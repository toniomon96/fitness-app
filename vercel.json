{
  "buildCommand": "npm run build",
  "devCommand": "npx vite --port $PORT",
  "outputDirectory": "dist",
  "routes": [
    { "src": "^/api/(.*)", "dest": "/api/$1" },
    { "src": "^/@(.*)", "dest": "/@$1" },
    { "src": "^/src/(.*)", "dest": "/src/$1" },
    { "src": "^/node_modules/(.*)", "dest": "/node_modules/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
